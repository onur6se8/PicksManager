<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ParamPageFragment">

    <LinearLayout
        android:id="@+id/fragment_param"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="#191919"
        android:orientation="vertical">




        <Button
            android:id="@+id/btnPrendrePhoto"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textSize="@dimen/default_text_size"
            android:background="@drawable/button_radius_proprimary_color"
            android:padding="@dimen/default_margin"
            android:layout_margin="@dimen/default_margin"
            android:text="Prendre une photo" />

        <Button
            android:id="@+id/btnEnregistrerPhoto"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textSize="@dimen/default_text_size"
            android:background="@drawable/button_radius_proprimary_color"
            android:padding="@dimen/default_margin"
            android:layout_margin="@dimen/default_margin"
            android:text="Enregistrer la photo" />


        <ImageView
            android:id="@+id/imgAffichePhoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:src="@tools:sample/avatars" />

    </LinearLayout>

</FrameLayout>